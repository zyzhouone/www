            <div class="message">
                队长
                <hr />
                <div class="form-inline">
                    <div class="form-group">
                        <input type="text" class="form-control name" placeholder="请输入姓名" id="ld_name" name="Nickname" value="@Model.Name" disabled="disabled"/>
                    </div>
