@using Model;

@{
    ViewBag.Title = "城市定向赛";
    Layout = "~/Views/Shared/_pLayout.cshtml";
}

@model tblmatch

@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
    body{margin: 0;padding: 0;background-color: #f4f4f4;font-family: "微软雅黑"}
    body ul{list-style-type: none}

    /*middle-bar*/
    .banner{height: 100px;background-color: #229fe6;text-align: center}

    .nav{height: 48px;background-color: #229FE6;text-align: center;}
        .nav ul {
            list-style-type: none;
            text-align: center;
            width: 700px;
            margin: 0 auto;
        }
    .nav ul li{float: left;font-size: 1.2em;line-height: 48px;color: #ffffff;margin: 0 15px}
    .nav ul li a{padding: 0 15px;color: #ffffff;text-decoration: none}
    .nav ul li:hover{background-color: #48b4ff}
    .nav ul .active{background-color: #48b4ff}

    .blog-left-right {  margin-top: 1em;  }
    .blog-left {  margin: 0em 0 2em 0;  padding-right: 1em;  }
    .Categories {  margin: 0;  }
    .Categories h3 {  font-size: 23px;  margin: 0 0 1em 0;  font-weight: 700;  padding-bottom: .5em;  color: #1CD5B5;  font-family: 'PoiretOne-Regular';  }
    .Categories ul {  margin: 0;  padding: 0;  }
    .Categories ul li {  display: block;  background: url(img/arrow.png) no-repeat 0px 2px;  margin-bottom: 1.5em;  }
    .Categories ul li a {  font-size: 14px;  margin: 0;  color: #B3B3B3;  padding-left: 2em;  }

     /*foot*/
    .footer {  padding: 1em 0;  background: #CBCBCB;  }
    .footer-bottom {  padding-top: 2em;  }
    .copyright {  text-align: center;  }
    .copyright p {  display: block;  color: #FFFFFF;  font-size: 14px;  margin: .5em 0 0 0;  }
    .copyright p a {  color: #FFF;  }

   /*detail*/
    .container{}
    .rule{width: 900px;border-radius: 15px;margin:50px auto;background-color: #ffffff;padding: 30px 0}
    .tittle{width: 900px;height:90px;line-height: 90px;font-family: "微软雅黑";font-size: 25px;font-weight: normal;background-color: #48b4ff;color: #ffffff;padding-left: 20px}
    .action{margin: 20px 30px;line-height: 25px}
    .action span{float: left;width:25px;height: 25px;background: url("img/icon-rule.png");background-size: cover;margin-right: 10px}
    .action .part1{font-size: 15px;font-weight: 600}
    .action hr{margin-top: 15px;margin-bottom: 10px}
    .action .part2{padding:0px 80px 15px 50px;font-weight: 100;color: #666;margin-bottom: 35px;font-size: 10px}
    </style>
}

@section PageSpecificJavascriptIncludes{

  }

<div class="header nav">
             <ul>
        <li><a href="@Url.Action("Index", "dx")">首页</a></li>
        <li class="active"><a href="@Url.Action("bulletin", "dx")">赛事列表</a></li>
        @*<li><a href="@Url.Action("board", "dx")">竞赛公告</a></li>*@
        <li><a href="@Url.Action("about", "dx")">关于我们</a></li>
        @if (ViewBag.uuid == null)
        {
            <li><a href="@Url.Action("login", "member")">登录注册</a></li>
        }
        else
        { 
            <li><a href="@Url.Action("center", "member")">我的信息</a></li>
            <li><a href="@Url.Action("f880067","coupon")">F码通道</a></li>
        }
    </ul>
</div>

<!--detail-->
<div class="blog">
    <div class="container">
        <div class="rule">
            <div class="tittle">@Model.Match_name</div>
            <div class="action">
                <span></span><div class="part1">介绍</div>
                <hr>
                <div class="part2">@Model.Content</div>
            </div>
            <div class="action">
                <span></span><div class="part1">时间</div>
                <hr>
                <div class="part2">
                    <blockquote>
                        <p>预报名时间</p>
                        <footer>@Model.Date1.Value.ToString("yyyy-MM-dd") 至 @Model.Date2.Value.ToString("yyyy-MM-dd") </footer>
                    </blockquote>
                    <blockquote>
                        <p>报名付款时间</p>
                        <footer>@Model.Date3.Value.ToString("yyyy-MM-dd")</footer>
                    </blockquote>
                    <blockquote>
                        <p>比赛时间</p>
                        <footer>@Model.Date4.Value.ToString("yyyy-MM-dd")</footer>
                    </blockquote>
                </div>
                @if (Model.Status == "1")
                {
                <div><button class="btn btn-info" style="margin: 30px 35%;width: 200px!important;"
        onclick="javascript:window.location.href='@Url.Action("Protocol", "enter", new { matchid = ViewBag.id })';">
    立即报名
</button></div>
                }
            </div>

        </div>
    </div>
</div>