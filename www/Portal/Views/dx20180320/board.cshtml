@{
    ViewBag.Title = "城市定向赛";
    Layout = "~/Views/Shared/_pLayout.cshtml";
}


@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
    body{margin: 0;padding: 0;background-color: #f4f4f4;font-family: "微软雅黑"}
    body ul{list-style-type: none}

    /*middle-bar*/
    .banner{height: 100px;background-color: #229fe6;text-align: center}

    .nav{height: 48px;background-color: #229FE6;text-align: center;}
        .nav ul {
            list-style-type: none;
            text-align: center;
            width: 700px;
            margin: 0 auto;
        }
    .nav ul li{float: left;font-size: 1.2em;line-height: 48px;color: #ffffff;margin: 0 15px}
    .nav ul li a{padding: 0 15px;color: #ffffff;text-decoration: none}
    .nav ul li:hover{background-color: #bc308d}
    .nav ul .active{background-color: #bc308d}

    .blog-left-right {  margin-top: 1em;  }
    .blog-left {  margin: 0em 0 2em 0;  padding-right: 1em;  }
    .Categories {  margin: 0;  }
    .Categories h3 {  font-size: 23px;  margin: 0 0 1em 0;  font-weight: 700;  padding-bottom: .5em;  color: #1CD5B5;  font-family: 'PoiretOne-Regular';  }
    .Categories ul {  margin: 0;  padding: 0;  }
    .Categories ul li {  display: block;  background: url(img/arrow.png) no-repeat 0px 2px;  margin-bottom: 1.5em;  }
    .Categories ul li a {  font-size: 14px;  margin: 0;  color: #B3B3B3;  padding-left: 2em;  }


    /*bulletin*/
    .blog {  padding: 4em 0;  }
    .blog-text h3 {  font-size: 31px;  margin: 0 0 1em 0;  font-weight: 700;  padding-bottom: .5em;  text-align: center;  color: #1CD5B5;  font-family: 'PoiretOne-Regular';  }
    .blog-left {  margin: 0em 0 2em 0;  padding-right: 1em;  }
    .blog-left-left {  padding: 0 !important;  }
    .blog-left-left p {  margin: 0 0 1em;  font-size: 15px;  font-weight: 500;  color: #555555;  }
    .blog-left-left a img {  width: 100%;  }

    /*foot*/
    .footer {  padding: 1em 0;  background: #CBCBCB;  }
    .footer-bottom {  padding-top: 2em;  }
    .copyright {  text-align: center;  }
    .copyright p {  display: block;  color: #FFFFFF;  font-size: 14px;  margin: .5em 0 0 0;  }
    .copyright p a {  color: #FFF;  }

     /*about*/
    .about-grids {
        margin-bottom: 1em;
    }

    .about-left h3 {
        font-size: 23px;
        margin: 0 0 1em 0;
        font-weight: 700;
        padding-bottom: .5em;
        border-bottom: 1px solid #868686;
        color: #1CD5B5;
        font-family: 'PoiretOne-Regular';
    }

    .about-left p {
        font-size: 14px;
        margin: 0.5em 0;
        color: #B3B3B3;
        line-height: 1.8em;
    }

    .about-middle h3 {
        font-size: 23px;
        margin: 0 0 1em 0;
        font-weight: 700;
        padding-bottom: .5em;
        border-bottom: 1px solid #868686;
        color: #1CD5B5;
        font-family: 'PoiretOne-Regular';
    }

    .about-right h3 {
        font-size: 23px;
        margin: 0 0 1em 0;
        font-weight: 700;
        padding-bottom: .5em;
        border-bottom: 1px solid #868686;
        color: #1CD5B5;
        font-family: 'PoiretOne-Regular';
    }

    .about-right-info p {
        font-size: 14px;
        margin: 0.5em 0;
        color: #B3B3B3;
        line-height: 1.8em;
    }

    /*foot*/
    .footer {
        padding: 1em 0;
        background: #CBCBCB;
    }

    .footer-bottom {
        padding-top: 2em;
    }

    .copyright {
        text-align: center;
    }

        .copyright p {
            display: block;
            color: #FFFFFF;
            font-size: 14px;
            margin: .5em 0 0 0;
        }

            .copyright p a {
                color: #FFF;
            }

    .rule {
        width: 900px;
        border-radius: 15px;
        margin: 50px auto;
        background-color: #ffffff;
        padding: 30px 0;
    }

        .tittle {
            width: 900px;
            height: 90px;
            line-height: 90px;
            font-family: "微软雅黑";
            font-size: 25px;
            font-weight: normal;
            background-color: #bc308d;
            color: #ffffff;
            padding-left: 20px;
        }

    .action {
        margin: 20px 30px;
        line-height: 25px;
    }

        .action span {
            float: left;
            width: 25px;
            height: 25px;
            background: url("img/icon-rule-orange.png");
            background-size: cover;
            margin-right: 10px;
        }

        .action .part1 {
            font-size: 15px;
            font-weight: 600;
        }

        .action hr {
            margin-top: 15px;
            margin-bottom: 10px;
        }

        .action .part2 {
            padding: 0px 80px 15px 50px;
            font-weight: 100;
            color: #666;
            margin-bottom: 35px;
            font-size: 10px;
        }

    </style>
}

