@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>系统登录</title>
@Styles.Render("~/assets/lgcss")
</head>
<body class="login">
    <!-- BEGIN LOGO -->
  <div class="logo">
    <!--img src="@Url.Content("~/content/images/logo4.png")" alt=""/--> 
  </div>
  <!-- END LOGO -->
  <!-- BEGIN LOGIN -->
  <div class="content">
    <!-- BEGIN LOGIN FORM -->
    @using (Html.BeginForm())
    {
      <div style=" width:100%;text-align:center;"><img src="@Url.Content("~/content/images/logo7.png")" alt=""/><!--h3 class="form-title">中国坐标.管理平台</h3--></div>
      <div class="alert alert-error hide">
        <button class="close" data-dismiss="alert"></button>
        <span>Enter any username and passowrd.</span>
      </div>
      <div class="control-group">
        <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
        <label class="control-label visible-ie8 visible-ie9">用户名</label>
        <div class="controls">
          <div class="input-icon left">
            <i class="icon-user"></i>
            @Html.TextBox("username", string.Empty, new { @class = "m-wrap placeholder-no-fix", placeholder = "用户名", data_val_required = "用户名不能为空", data_val = "true" })
          </div>
          <span class="help-block">@Html.ValidationMessage("username")</span>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label visible-ie8 visible-ie9">密码</label>
        <div class="controls">
          <div class="input-icon left">
            <i class="icon-lock"></i>
            @Html.Password("password", string.Empty, new { @class = "m-wrap placeholder-no-fix", placeholder = "密码", data_val_required = "密码不能为空", data_val = "true" })
          </div>
           <span class="help-block">@Html.ValidationMessage("password")</span>
        </div>
      </div>
      <div class="form-actions">
        <button type="submit" class="btn green pull-right">
        登录 <i class="m-icon-swapright m-icon-white"></i>
        </button>   
        <div>@Html.ValidationMessage("error") </div>
      </div>
    }
    <!-- END LOGIN FORM -->        
  </div>
    <div class="copyright">
   @*<h4>注意 &copy; 测试版本</h4> *@
  </div>
  <!-- END LOGIN -->
  @Scripts.Render("~/assets/lgjq")
  <script>
      jQuery(document).ready(function () {
          App.initLogin();
      });
  </script>
</body>
</html>
