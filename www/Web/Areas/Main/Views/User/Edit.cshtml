@using Model;
@using BLL;
@using Web;

@model sysuser

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}

@section PageSpecificJavascriptIncludes{

    <script type="text/javascript">
        $(document).ready(function () {
            $("#mainForm").submit(function () {

                return true;
            });
        });
   </script>
}

@section MainContent{
    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
        <div class="row-fluid">
            <input id="id" type="hidden" value="@Model.Userid"/>

                <div class="control-group">
                    <label class="control-label"><span class="required">*</span>用户名：</label>
                    <div class="controls">
                    @Html.TextBoxFor(m => m.Username, new { @class = "m-wrap small" })
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label"><span class="required">*</span>密码：</label>
                    <div class="controls">
                    @Html.TextBoxFor(m => m.Password, new { @class = "m-wrap small" })
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">手机号码：</label>
                    <div class="controls">
                    @Html.TextBoxFor(m => m.Telphone, new { @class = "m-wrap small"})
                    </div>
                </div>
                
                <div class="control-group">
                    <label class="control-label">E-mail：</label>
                    <div class="controls">
                    @Html.TextBoxFor(m => m.Email, new { @class = "m-wrap small"})
                    </div>
                </div>
             
             <div class="control-group">
                    <label class="control-label">备注：</label>
                    <div class="controls">
                    @Html.TextBoxFor(m => m.Note, new { @class = "m-wrap large"})
                    </div>
                </div>
        </div>
    </div>
}


