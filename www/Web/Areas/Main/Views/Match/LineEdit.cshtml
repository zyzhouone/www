@using Model;
@using BLL;
@using Web;

@model tblline

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}

@section PageSpecificJavascriptIncludes{

    <script type="text/javascript">
        $(document).ready(function () {
            $("#mainForm").submit(function () {

                return true;
            });
        });
    </script>
}

@section MainContent{
    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
        <div class="row-fluid">
            <input id="id" type="hidden" value="@Model.Lineid" />
            <div id="msg">@Html.Raw(ViewBag.ErrorMsg)</div>
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>线路名称：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Name, new { @class = "m-wrap large" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Name)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"><span class="required">*</span>简介：</label>
                <div class="controls">
                    @Html.TextAreaFor(m => m.Content, new { @class = "m-wrap large" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Content)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">队伍人数：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Players, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Players)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">队伍上限：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Count, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Count)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">状态：</label>
                <div class="controls">
                    <select id="optStatus" name="optStatus" data-placeholder="请选择状态" class="m-wrap small">
                        @Html.Raw(ViewBag.Status)
                    </select>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript" src="@Url.Content("~/scripts/js/selector/jquery-1.10.js")"></script>

