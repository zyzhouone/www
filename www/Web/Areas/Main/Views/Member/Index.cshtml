@using (Html.BeginForm("Delete", "Member", FormMethod.Post, new { id = "mainForm" }))
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th style="width: 8px;">
                    <input type="checkbox" id="checkall" class="group-checkable" />
                </th>
                <th>
                    电话
                </th>
                <th>
                    性别
                </th>
                <th>
                    身份类别
                </th>
                <th>
                    证件号码
                </th>
                <th>
                    生日
                </th>
                <th>
                    最后登录
                </th>
                <th>
                    状态
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" class="checkboxes" name='ids' value='@m.userid' />
                    </td>
                    <td>
                        @m.Mobile
                    </td>
                    <td>
                        @if (m.sexy == "1")
                        {
                            @:男
                        }
                        else if (m.sexy == "2")
                        {
                            @:女
                        }
                        else
                        {
                            @:未知
                        }
                    </td>
                    <td>
                        @if (m.cardtype == "1")
                        {
                            @:身份证
                        }
                        else if (m.cardtype == "2")
                        {
                            @:居住证
                        }
                    </td>
                    <td>
                        @m.cardno
                    </td>
                    <td>
                        @if (m.birthday != null)
                        {
                           @m.birthday.Value.ToString("yyyy-MM-dd");
                        }
                        
                    </td>
                    <td>
                        @m.Last_Time
                    </td>
                    <td>
                        @if (m.Status == 0)
                        {
                            <span class="label label-success">正常</span>
                        }
                        else if (m.Status == 1)
                        {
                            <span class="label label-inverse">禁用</span>
                        }
                        else
                        {
                            <span class="label label-warning">删除</span>
                        }
                       
                    </td>
                    <td>
                        <a class="btn mini purple thickbox" title='编辑会员资料' href="@Url.Action("Edit", new { id = m.userid })?TB_iframe=true&height=520&width=500">
                            <i class="icon-edit"></i>编辑
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<div class="dataTables_paginate paging_bootstrap pagination">
    @Html.Pager(Model, new PagerOptions() { ShowTotalItemCount = true })
</div>
