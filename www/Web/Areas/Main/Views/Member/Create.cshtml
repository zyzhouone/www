@using Model;
@using BLL;
@using Web;

@model tblusers

@{
    ViewBag.Title = "新增";
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}

@section PageSpecificJavascriptIncludes{

    <script type="text/javascript">
        $(document).ready(function () {
            $("#mainForm").submit(function () {

                return true;
            });
        });
    </script>
}
@section MainContent{
    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
        <div class="row-fluid">
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>手机号码：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Mobile, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Mobile)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"><span class="required">*</span>密码：</label>
                <div class="controls">
                   @Html.TextBoxFor(m => m.Passwd, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Passwd)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">性别：</label>
                <div class="controls">
                    <select id="optSexy" name="optSexy" data-placeholder="请选择性别" class="m-wrap small">
                        @Html.Raw(ViewBag.Sexy)
                    </select>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">证件类别：</label>
                <div class="controls">
                    <select id="optCardType" name="optCardType" data-placeholder="请选择证件类型" class="m-wrap small">
                        @Html.Raw(ViewBag.CardType)
                    </select>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">证件号码：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.cardno, new { @class = "m-wrap large" })
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">生日：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.birthday, new { @class = "m-wrap small", id = "birthday" })
                </div>
            </div>
                <div class="control-group">
                    <label class="control-label">状态：</label>
                    <div class="controls">
                        <select id="optStatus" name="optStatus" data-placeholder="请选择状态" class="m-wrap small">
                            @Html.Raw(ViewBag.Status)
                        </select>
                    </div>
                </div>
            </div>
        </div>
}
<script type="text/javascript" src="@Url.Content("~/scripts/js/selector/jquery-1.10.js")"></script>
<script type="text/javascript" src="@Url.Content("~/scripts/js/datepicker/jquery-ui.js")"></script>
<script>
    $(function () {
        $("#birthday").datepicker({ dateFormat: 'yy-mm-dd' });
    });

</script>

